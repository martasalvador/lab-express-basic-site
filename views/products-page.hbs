<div class="container">
    <div class="mt-2">
        <h1>Products</h1>
        <hr>
        <h2>Los productos son:</h2>

    </div>
    <div class="container d-flex flex-wrap justify-content-center">
        {{#each products}}
        <div class="card m-3 " style="width: 18rem;">
            <img src="{{thumbnail}}" class="card-img-top" alt="images">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <hr>
                <p class="card-text">{{description}}</p>
                <a href="#" class="btn btn-primary m-3 ">Buy</a>
                <p><b>Rating: {{rating}}</b></p>
            </div>
        </div>
        {{/each}}

    </div>
</div>